    "@google-cloud/vertexai": "^1.10.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^7.0.2",
    "fuzzball": "^2.0.0",
    "jsonrepair": "^3.11.2",
    "replicate": "^0.29.0",
    "undici": "^6.21.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.12",
    "firebase-functions-test": "^3.4.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.2"
  },
  "private": true
}
